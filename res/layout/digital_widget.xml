<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/digital_widget"
    android:background="@drawable/digital_stadium_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/system_bg"
    android:clipToOutline="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextClock
        android:textColor="@color/digital_appwidget_text_color"
        android:ellipsize="none"
        android:gravity="center|top"
        android:id="@+id/date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:includeFontPadding="false"
         />
    <TextClock
        android:textColor="@color/analog_appwidget_minute_hand_color"
        android:ellipsize="none"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.01785714"
        android:layout_gravity="center"
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:format12Hour="@string/lock_screen_12_hour_format"
        android:format24Hour="@string/lock_screen_24_hour_format" />
    <LinearLayout
        android:layout_gravity="center|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/nextAlarmIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:tint="@color/digital_appwidget_text_color"
            android:contentDescription="@null"
             />
        <TextView
            android:textColor="@color/digital_appwidget_text_color"
            android:ellipsize="none"
            android:layout_gravity="center"
            android:id="@+id/nextAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"
             />
    </LinearLayout>
    <ListView
        android:layout_gravity="center|top"
        android:id="@+id/world_city_list"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@null" />
</LinearLayout>
